{
  "private": true,
  "license": "ISC",
  "homepage": "https://github.com/rehypejs/rehype-dom",
  "repository": "rehypejs/rehype-dom",
  "bugs": "https://github.com/rehypejs/rehype-dom/issues",
  "author": "Keith McKnight <keith@mcknig.ht> (https://keith.mcknig.ht)",
  "contributors": [
    "Keith McKnight <keith@mcknig.ht> (https://keith.mcknig.ht)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "c8": "^7.0.0",
    "hastscript": "^6.0.0",
    "jsdom": "^16.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.0.0",
    "rehype-highlight": "^4.0.0",
    "rehype-parse": "^7.0.0",
    "rehype-slug": "^3.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "rollup": "^2.0.0",
    "tape": "^5.0.0",
    "unified": "^9.0.0",
    "unist-builder": "^2.0.0",
    "unist-util-visit": "^2.0.0",
    "xo": "^0.36.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "clean": "npm run clean:rehype-dom && npm run clean:parse && npm run clean:stringify",
    "clean:rehype-dom": "rm -rf packages/rehype-dom/dist",
    "clean:parse": "rm -rf packages/rehype-dom-parse/dist",
    "clean:stringify": "rm -rf packages/rehype-dom-stringify/dist",
    "build": "rollup -c",
    "lint": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run clean && npm run build && npm run lint && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": true,
    "rules": {
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "no-eq-null": "off",
      "unicorn/prefer-node-append": "off"
    },
    "overrides": [
      {
        "files": "**/src/*.js",
        "envs": "browser"
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}

{
  "compilerOptions": {
    "customConditions": ["development"],
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "node16",
    "newLine": "lf",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["**/coverage/", "**/node_modules/"],
  "include": [
    "**/*.js",
    "packages/rehype-dom-parse/index.d.ts",
    "packages/rehype-dom-stringify/index.d.ts"
  ]
}
